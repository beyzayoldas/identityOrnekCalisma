@model identiyOrnekCalisma.Models.ProjectModel
@{
    ViewBag.Title = "Delete Project";
}

<h2>Delete Project</h2>
<hr />

<p>Are you sure you want to delete this project?</p>

@using (Html.BeginForm("ConfirmDelete", "Customer", new { id = Model.ProjectId }, FormMethod.Post))
{
    @Html.HiddenFor(model => model.ProjectId)

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Customer")" class="btn btn-default">Cancel</a>
}
